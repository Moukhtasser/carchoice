@model testPFA.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Client" class="control-label"></label>
                <input asp-for="Client" class="form-control" />
                <span asp-validation-for="Client" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voiture" class="control-label"></label>
                <select asp-for="Voiture.IdModele" class="form-control">
                    <option value="">Sélectionnez une voiture</option>
                    @foreach (var car in ViewBag.Cars)
                    {
                        <option value="@car.IdModele">@car.Marque - @car.Modele</option>
                    }
                </select>
                <span asp-validation-for="Voiture" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Extras" class="control-label"></label>
                <input asp-for="Extras" class="form-control" />
                <span asp-validation-for="Extras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Saison" class="control-label"></label>
                <input asp-for="Saison" class="form-control" />
                <span asp-validation-for="Saison" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixR" class="control-label"></label>
                <input asp-for="PrixR" class="form-control" />
                <span asp-validation-for="PrixR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
